<html>
<body>
<%= render 'partials/sidebar' %>
<h1> Create new email </h1>
<div id="form">
  <%= form_with do |form| %>
    <div class="card">
      <div class="card-body">

        <%= form.text_field :to, { class: "form-control", placeholder: "To..." } %>
        <%= text_area_tag 'subject', nil, class: 'form-control', placeholder: 'Subject...', rows: 2 %>
        <%= text_area_tag 'content', nil, class: 'form-control', placeholder: 'Content...', rows: 20 %>
        <br>
        <%= form.submit "Send email", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %></div>
</body>
</html>

<style>
    body {
        background-color: #242424;
        /* Add this padding so the content of the page does not overlap with the sidebar partial*/
        padding-left: 160px;
    }

    .form-control {
        margin-bottom: 5px;
    }

    .card {
        background-color: #242424;
        border-color: #121212;
        margin-left: 10px;
        margin-right: 10px;
    }

    textarea {
        resize: none;
    }
</style>
