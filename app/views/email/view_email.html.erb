<html>
<head>
  <style>
      body {
          background-color: #242424
      }

      .card {
          background-color: white;
          border-color: white;
          margin-left: 10px;
          margin-right: 10px;
          top: 10px;
          padding: 0;
      }

      .card-body {
          top: 0;
          margin: 0;
      }

      .card p {
          color: #121212;
      }

      .card h1 {
          color: #121212;
      }

      .card h5 {
          color: #121212;
      }

      .card hr {
          color: #121212;
      }

      .back-button {
          background-color: #f1f1f1;
          color: black;
          text-decoration: none;
          display: inline-block;
          padding: 8px 16px;
          margin: 10px;
          border-radius: 3px;
      }

      .back-button:hover {
          background-color: #ddd;
          color: black;
          cursor: pointer;
      }

  </style>
</head>

<body>

<%= render 'partials/sidebar' %>
<a onclick="goBack()" class="back-button">&laquo; <%= I18n.t 'previous' %></a>
<div class="card">
  <div class="card-body">
    <h1><b><%= I18n.t 'from' %>:</b> <%= @email.from %></h1>
    <h5><b><%= I18n.t 'to' %>:</b> <%= @email.to %></h5>
    <hr>
    <p><b><%= I18n.t 'subject' %>:</b> <%= @email.subject %></p>
    <br>
    <p><%= @email.content %></p>
  </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
</body>
</html>
