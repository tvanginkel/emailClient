<html>
<head>
  <style>
      .card p {
          color: #121212;
      }

      .card h1 {
          color: #121212;
      }

      .card h5 {
          color: #121212;
      }

      .card hr {
          color: #121212;
      }

      .back-button {
          background-color: #f1f1f1;
          color: black;
          text-decoration: none;
          display: inline-block;
          padding: 8px 16px;
          margin: 10px;
          border-radius: 3px;
      }

      .back-button:hover {
          background-color: #ddd;
          color: black;
          cursor: pointer;
      }

  </style>
  <%= stylesheet_link_tag "home_body.css" %>
</head>

<body>
<%= render partial: 'partials/sidebar', :locals => { :page => 'inbox' } %>

<!-- Back button -->
<a onclick="goBack()" class="back-button">&laquo; <%= I18n.t 'actions.previous' %></a>

<!-- Email view -->
<div class="card">
  <div class="card-body">
    <h1><b><%= I18n.t 'fields.from' %>:</b> <%= @email.from %></h1>
    <h5><b><%= I18n.t 'fields.to' %>:</b> <%= @email.to %></h5>
    <hr>
    <p><b><%= I18n.t 'fields.subject' %>:</b> <%= @email.subject %></p>
    <br>
    <p><%= @email.content %></p>
  </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
</body>
</html>
