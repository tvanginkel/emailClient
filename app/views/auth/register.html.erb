<html>
<head>
  <style>

      label {
          color: white;
      }

      .center {
          border-radius: 15px;
          padding: 50px;
          position: fixed;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          background-color: #121212;
          text-align: center;
      }

      h1 {
          color: #CCCCCC;
      }

      body {
          background-color: cornflowerblue;
      }
  </style>

</head>
<body>

<div class="center">
  <h1> <%= I18n.t 'auth.make_an_account' %></h1>
  <br>
  <%= form_with do |form| %>
    <%= form.label :email, "Email:" %>
    <%= form.text_field :email %>
    <br>
    <br>
    <%= form.label :password, (I18n.t 'fields.password_field') %>
    <%= form.text_field :password %>
    <br>
    <br>
    <%= form.submit (I18n.t 'auth.create_account') %>
  <% end %>

  <a href="/auth/login"><%= I18n.t 'auth.already_have_an_account' %></a>
</div>


</body>
</html>
